<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cs.model">

    <class name="CustomerAccount" table="customer_accounts">
        <id name="id" column="_id_customer_account">
            <generator class="native"/>
        </id>
        <property name="gender" type="integer" column="gender"/>
        <property name="customerLogin" type="string" column="customer_login"/>
        <property name="customerPassword" type="string" column="customer_password"/>
        <property name="lastName" type="string" column="last_name"/>
        <property name="firstName" type="string" column="first_name"/>
        <property name="geolocLongitude" type="double" column="geoloc_longitude"/>
        <property name="geolocLatitude" type="double" column="geoloc_latitude"/>    
        <property name="emailAddress" type="string" column="email_address"/>
        <property name="address" type="string" column="address"/>
        <property name="country" type="string" column="country"/>
        <property name="zipCode" type="string" column="zipcode"/>
        <property name="phone" type="string" column="phone"/>
        <property name="mobile" type="string" column="mobile"/>
        <property name="customerType" type="integer" column="customer_type"/>
        <property name="idVehicule" type="integer" column="_id_vehicule"/>
        <property name="acceptAnimals" type="integer" column="accept_animals"/>
        <property name="acceptRadio" type="integer" column="accept_radio"/>
        <property name="acceptSmoker" type="integer" column="accept_smoker"/>
        <property name="acceptToDiscuss" type="integer" column="accept_to_discuss"/>
        <property name="acceptToMakeADetour" type="integer" column="accept_to_make_a_detour"/>
        <property name="datetimeRegistration" type="timestamp" column="datetime_registration"/>
        <property name="datetimeLastConnection" type="timestamp" column="datetime_last_connection"/>
        <property name="datetimeLastOfferCreated" type="timestamp" column="datetime_last_offer_created"/>
        <property name="datetimeLastCarSharing" type="timestamp" column="datetime_last_car_sharing"/>
        <property name="datetimeLastConnectionAndroid" type="timestamp" column="datetime_last_connection_android"/>
     </class>
     
</hibernate-mapping>