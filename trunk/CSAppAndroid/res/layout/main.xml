  			  android:orientation="vertical">

    <LinearLayout android:layout_width="fill_parent"
		     	  android:layout_height="30dp"
		     	  android:background="#8181F7">
		     	  
		     	  
		<!--
    	<TextView android:id="@+id/test_geoloc"
