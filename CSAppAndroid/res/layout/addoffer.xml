<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:orientation="vertical">
	
	<TextView android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:gravity="left"
			  android:text="Ville de départ:"/>
	
	<EditText android:id="@+id/starting_address_edittext"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:background="@android:drawable/editbox_background"/>
			  
	<TextView android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:gravity="left"
			  android:text="Ville d'arrivée:"/>
			  
	<EditText android:id="@+id/finishing_address_edittext"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:background="@android:drawable/editbox_background"/>
			  
	<TextView android:id="@+id/date_route_textview"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:gravity="left"
			  android:text="Date du trajet:"/>
	
	<LinearLayout android:layout_width="fill_parent"
			  	  android:layout_height="30dp"
			  	  android:orientation="horizontal"
			  	  android:gravity="center">

	 	<EditText android:id="@+id/date_route_edittext"
	 	 		  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:width="140dp"
				  android:editable="false"
				  android:background="@android:drawable/editbox_background"/>
		
	    <Button android:id="@+id/date_route_button"
	        	android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Cal"/>

    </LinearLayout>

	<TextView android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:gravity="left"
			  android:text="Heure"/>

	<LinearLayout android:layout_width="fill_parent"
			  	  android:layout_height="30dp"
			  	  android:orientation="horizontal"
			  	  android:gravity="center">

	 	<EditText android:id="@+id/hour_route_edittext"
	 	 		  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:width="140dp"
				  android:editable="false"
				  android:background="@android:drawable/editbox_background"/>
			  
	   	<Button android:id="@+id/hour_route_button"
	        	android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Cal"/>

	</LinearLayout>
	
    <TextView android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:gravity="left"
			  android:text="Nombre de passagers:"/>
	
	<LinearLayout android:layout_width="fill_parent"
				  android:layout_height="wrap_content"
				  android:orientation="horizontal"
				  android:gravity="center">
  	
  		<Button android:id="@+id/decrement_number_of_passenger_button"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:text="-"/>
  				
  		<TextView android:id="@+id/number_of_passengers_textview"
			  	  android:layout_width="wrap_content"
			  	  android:layout_height="wrap_content"
			  	  android:text="3 pl."/>

  		<Button android:id="@+id/increment_number_of_passenger_button"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:text="+"/>
  	
  	</LinearLayout>
	
	<Button android:id="@+id/go_to_next_step_button"
			android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="Etape suivante"/>
	
</LinearLayout>